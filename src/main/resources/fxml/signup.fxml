<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.valinor.ui.controller.SignUpController"
      spacing="15" alignment="TOP_CENTER" styleClass="login-container">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <VBox alignment="CENTER" spacing="5">
        <Label text="Create Account" styleClass="app-title">
            <font>
                <Font size="26"/>
            </font>
        </Label>
        <Label text="Join the Valinor platform" styleClass="app-subtitle"/>
    </VBox>

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" prefHeight="420">
        <content>
            <VBox spacing="12" fillWidth="true">
                <HBox spacing="10">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="First Name*"/>
                        <TextField fx:id="firstNameField" promptText="Jane" styleClass="input-field"/>
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Last Name*"/>
                        <TextField fx:id="lastNameField" promptText="Doe" styleClass="input-field"/>
                    </VBox>
                </HBox>

                <VBox spacing="5">
                    <Label text="Email*"/>
                    <TextField fx:id="emailField" promptText="jane.doe@example.com" styleClass="input-field"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Phone"/>
                    <TextField fx:id="phoneField" promptText="Optional" styleClass="input-field"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Username*"/>
                    <TextField fx:id="usernameField" promptText="janedoe" styleClass="input-field"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Password*"/>
                    <PasswordField fx:id="passwordField" promptText="Enter password" styleClass="input-field"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Confirm Password*"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" styleClass="input-field"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Role*"/>
                    <ComboBox fx:id="roleComboBox" promptText="Select role" prefHeight="40"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Restaurant ID"/>
                    <TextField fx:id="restaurantIdField" promptText="Optional" styleClass="input-field"/>
                </VBox>
            </VBox>
        </content>
    </ScrollPane>

    <Label fx:id="errorLabel" styleClass="error-label" wrapText="true" visible="false" managed="false"/>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button"/>
        <Button fx:id="createAccountButton" text="Create Account" onAction="#handleSignUp"
                styleClass="primary-button"/>
    </HBox>

</VBox>
